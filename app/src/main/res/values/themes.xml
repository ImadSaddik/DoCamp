<resources xmlns:tools="http://schemas.android.com/tools">

    <style name="Base.Theme.RAGApplication" parent="Theme.Material3.DayNight.NoActionBar">
        <item name="textPrimaryColor">@color/black</item>
        <item name="textPrimaryColorInverted">@color/white</item>

        <item name="backgroundColor">@color/light_bg</item>
        <item name="roomNameBackground">@color/pale_grey_light</item>

        <item name="iconBackgroundColor">@color/black</item>
        <item name="iconBackgroundColorInverted">@color/white</item>

        <item name="borderColor">@color/dark_border_color</item>

        <item name="materialComponentColor">@color/yellow_700</item>

        <item name="pageIndicatorSelected">@color/yellow_700</item>
        <item name="pageIndicatorNotSelected">@color/dark_yellow</item>

        <item name="materialButtonStyle">@style/Widget.App.Button</item>
        <item name="circularProgressIndicatorStyle">@style/Widget.App.CircularProgressIndicator</item>
        <item name="textInputStyle">@style/Widget.App.TextInputLayout</item>

    </style>

    <style name="Theme.RAGApplication" parent="Base.Theme.RAGApplication" />

    <!-- Theme for buttons -->
    <style name="Widget.App.Button" parent="Widget.Material3.Button">
        <item name="materialThemeOverlay">@style/ThemeOverlay.App.Button</item>
    </style>

    <style name="ThemeOverlay.App.Button" parent="">
        <item name="colorContainer">?attr/materialComponentColor</item>
        <item name="colorOnContainer">@color/black</item>
    </style>

    <!-- Theme for progress bar -->
    <style name="Widget.App.CircularProgressIndicator" parent="Widget.Material3.CircularProgressIndicator">
        <item name="materialThemeOverlay">@style/ThemeOverlay.App.CircularProgressIndicator</item>
        <item name="trackThickness">20dp</item>
    </style>

    <style name="ThemeOverlay.App.CircularProgressIndicator" parent="">
        <item name="colorPrimary">?attr/materialComponentColor</item>
    </style>

    <!-- Theme for text input layout -->
    <style name="Widget.App.TextInputLayout" parent="Widget.Material3.TextInputLayout.OutlinedBox">
        <item name="materialThemeOverlay">@style/ThemeOverlay.App.TextInputLayout</item>
        <item name="hintTextColor">?attr/colorOnSurface</item>
    </style>

    <style name="ThemeOverlay.App.TextInputLayout" parent="">
        <item name="colorPrimary">@color/yellow_700</item>
<!--        <item name="colorOnSurface">@color/shrine_pink_900</item>-->
        <item name="editTextStyle">@style/Widget.Material3.TextInputEditText.OutlinedBox</item>
    </style>

</resources>